    </span><span class="nl">"created_at"</span><span class="p">:</span><span class="w"> </span><span class="s2">"2013-04-20T08:23:42-03:00"</span><span class="p">,</span><span class="w">
    </span><span class="nl">"updated_at"</span><span class="p">:</span><span class="w"> </span><span class="s2">"2013-04-20T08:23:42-03:00"</span><span class="p">,</span><span class="w">
    </span><span class="nl">"happened_at"</span><span class="p">:</span><span class="w"> </span><span class="s2">"2013-04-20T05:17:02-03:00"</span><span class="p">,</span><span class="w">
    </span><span class="nl">"estimated_delivery_at"</span><span class="p">:</span><span class="w"> </span><span class="s2">"2013-04-22T12:00:00-03:00"</span><span class="w">
</span><span class="p">}</span><span class="w">
</span></code></pre></div></div>

<h3 id="delete-ordersorder_idfulfillmentsid">DELETE /orders/${order_id}/fulfillments/{id}</h3>

<p>Remove a Fulfillment Event</p>

